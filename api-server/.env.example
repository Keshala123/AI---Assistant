# ðŸŒ¾ Wee Saviya AI Assistant Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
SESSION_SECRET=super-secret-session-key-change-this-in-production

# n8n Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=n8n-api-key

# AI Service Configuration
OPENAI_API_KEY=openai-api-key
GOOGLE_AI_API_KEY=google-ai-api-key
ANTHROPIC_API_KEY=anthropic-api-key

# Speech Services
GOOGLE_SPEECH_API_KEY=google-speech-api-key
AZURE_SPEECH_KEY=azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# Database Configuration (for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/wee_saviya_ai
REDIS_URL=redis://localhost:6379

# External APIs
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
SOCKET_IO_CORS_ORIGIN=*
SOCKET_IO_TRANSPORTS=websocket,polling